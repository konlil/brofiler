<UserControl x:Class="Profiler.CounterPlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
         <d3:ChartPlotter x:Name="plotter" BorderThickness="1" BorderBrush="Black"  Margin="10">
                <d3:Header x:Name="HeaderName" Content="Simple Chart"/>
                <d3:HorizontalAxisTitle x:Name="HorizontalAxisTitle" Visibility="Collapsed">This is horizontal axis</d3:HorizontalAxisTitle>
                <d3:VerticalAxisTitle x:Name="VerticalAxisTitle">This is vertical axis</d3:VerticalAxisTitle>
            </d3:ChartPlotter>
    </Grid>
</UserControl>
